<%= form_for :user, url: users_path do | f | %>

    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@user.errors.count, "error") %>:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :cpf %>
      <%= f.text_field :cpf %>
    </p>

    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </p>

    <p>
      <%= f.label :cns %>
      <%= f.text_field :cns %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>